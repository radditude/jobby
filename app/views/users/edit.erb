<% @title = "Jobby - Edit User Info" %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/user">User</a></li>
  <li><a href="/user/edit">Edit</a></li>
</ol>

<form action="/user" method="post">
  <input id="hidden" type="hidden" name = "_method" value="PATCH">

  <div class="form-group">
    <label>Username</label>
    <input class="form-control" type="text" name="user[username]" value="<%= current_user.username %>">
  </div>

  <div class="form-group">
    <label>Email</label>
    <input class="form-control" type="text" name="user[email]" value="<%= current_user.email %>">
  </div>

  <div class="form-group">
    <label>Password</label>
    <input class="form-control" type="password" name="user[password]" value="<%= current_user.password %>">
  </div>

  <button class="btn btn-primary" type="submit">Save New Info</button>
</form>
