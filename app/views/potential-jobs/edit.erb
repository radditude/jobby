<% @title = "Jobby - Edit Job Info" %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/potentialjobs">Potential Jobs</a></li>
  <li><a href="/potentialjobs/<%= current_job.id %>">View</a></li>
  <li><a href="/potentialjobs/<%= current_job.id %>/edit">Edit</a></li>
</ol>

<h1>Edit Job Info</h1>

<form action="/potentialjobs/<%= current_job.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label>Job Title</label>
    <input class="form-control" type="text" name="info[job_title]" value="<%= current_job.job_title %>">
  </div>

  <div class="form-group">
    <label>Link to Posting</label>
    <input class="form-control" type="text" name="info[link]" value="<%= current_job.link %>">
  </div>

  <div class="form-group">
    <label>Status:</label>
    <select class="form-control" name="info[status]">
      <option value="Not yet applied">Not yet applied</option>
      <option value="Applied">Applied</option>
      <option value="Phone screen">Phone screen</option>
      <option value="Interview">Interview</option>
      <option value="Offer">Offer</option>
      <option value="Declined">Declined</option>
    </select>
  </div>

  <div class="form-group">
    <label>Choose an existing company:</label>
    <select class="form-control" name="company">
      <option value="">Choose company</option>
      <% @current_user.companies.each do |company|%>
          <option value="<%= company.id %>" <% if current_job.company == company %> selected="selected" <% end %>>
            <%= company.name %>
          </option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label>Or add a new company:</label>
    <input class="form-control" type="text" name="new_company" placeholder="New Company's Name">
  </div>

  <button class="btn btn-primary" type="submit">Save Changes</button>
</form>
