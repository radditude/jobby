<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
  <title><%= @title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/styles.css" type="text/css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
  <!--<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>-->
  <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <% if logged_in %>
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <nav class="navbar navbar-inverse navbar-static-top">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="/images/jobby-icon.jpg" alt="Jobby" /></a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><a href="/potentialjobs">Potential Jobs</a></li>
              <li><a href="/companies">Companies</a></li>
            </ul>
          <ul class="nav navbar-nav navbar-right">
              <li><a href="/user"><span class="glyphicon glyphicon-cog" aria-hidden="true" aria-label="Settings"></span></a></li>
              <li id="logout"><a href="/logout">Log Out</a></li>
              <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
          </ul>
          </div><!-- /.navbar-collapse -->
      </nav>
      </div><!-- col-md-6 -->
      </div><!-- row -->
    <% end %><!-- end navbar conditional -->

    <% if !logged_in %>
      <div class="row vertical-center">
        <div class="col-md-4 col-md-offset-4">
          <%= yield %>
        </div><!-- row -->
      </div><!-- col-md-4 -->
    <% else %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= yield %>
        </div><!-- row -->
      </div><!-- col-md-6 -->
    <% end %>

  </div><!-- container-fluid -->

</body>
