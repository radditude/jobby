<% @title = "Jobby - Edit Company Info" %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/companies">Companies</a></li>
  <li><a href="/companies/<%= @company.id %>">View</a></li>
  <li><a href="/companies/<%= @company.id %>/edit">Edit</a></li>
</ol>

<form action="/companies/<%= @company.slug %>" method="post">
    <input id="hidden" type="hidden" name = "_method" value="PATCH">
    <input type="text" name="name" value="<%= @company.name %>">
    <input type="text" name="website" value="<%= @company.website %>">
    <input type="submit" name="submit" value="Save New Company Info">
</form>