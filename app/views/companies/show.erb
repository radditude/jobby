<% @title = "Jobby - View Company Info" %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/companies">Companies</a></li>
  <li><a href="/companies/<%= @company.id %>">View Job</a></li>
</ol>

<h1><%= @company.name %></h1>
<% if @company.website != "" %>
    <p>Website: <a href="<%= @company.website %>"><%= @company.website %></a></p>
<% end %>

<hr />

<form class="form-inline" action="/companies/<%= @company.slug %>" method="post">
  <a class="btn btn-primary" href="/companies/<%= @company.slug %>/edit">Edit Info</a>
  <a class="btn btn-primary" href="/companies">Back to List</a>
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input class="form-control btn btn-danger" type="submit" name="delete" value="Delete Company">
</form>